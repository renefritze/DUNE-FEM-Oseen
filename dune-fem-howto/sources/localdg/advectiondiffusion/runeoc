if [ ! -d TEXFILES ] ; then 
mkdir TEXFILES
fi

for problem in 5 ; do
	for polorder in 0 1 2; do
		for gridtype in ALUGRID_SIMPLEX ; do 
			if ! make GRIDTYPE=${gridtype} GRIDDIM=2 POLORDER=${polorder} PROBLEM=${problem} clean dgtest ; then
				echo "Compile error!"
				exit 1
			fi
			for epsilon in 0.0; do
				if ./dgtest box2d.dgf 2 0 ${epsilon} 0 1.0 ; then
				  mv eoc.tex TEXFILES/${gridtype}_pol${polorder}_p${problem}_eps${epsilon}.tex;
				  cd TEXFILES
				  pdflatex ${gridtype}_pol${polorder}_p${problem}_eps${epsilon}.tex;
				  rm -f *.{aux,log}
				  cd ..
				fi
			done
		done
	done
done
exit 0


